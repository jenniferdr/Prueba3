<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewsDetailActivity">

    <EditText
        android:id="@+id/titleNewEt"
        android:hint="Titulo de la noticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/dateNewEt"
        android:hint="Fecha de la noticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/addToFavBtn"
        android:text="Agregar a favoritos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/eraseNewBtn"
        android:text="Borrar Noticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/saveNewBtn"
        android:text="Guardar Cambios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>